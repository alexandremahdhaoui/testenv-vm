# testenv-vm development environment

# Add build output to PATH
export PATH="${PWD}/build/bin:${PATH}"

# Enable local development mode for workspace development
export FORGE_RUN_LOCAL_ENABLED=true
export ELEVATED_PREPEND_CMD="sudo -E"

# Point forge to local source for cross-project workspace development
FORGE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../forge" 2>/dev/null && pwd)"
if [ -d "${FORGE_DIR}" ]; then
  export FORGE_RUN_LOCAL_BASEDIR="${FORGE_DIR}"
fi

# Source any local overrides
if [ -f .envrc.local ]; then
  source .envrc.local
fi
