# testenv-vm development environment

# Add forge build tools to PATH (required for go-build, go-test engines)
export PATH="/home/alexandremahdhaoui/workspaces/forge/build/bin:${PATH}"

# Add build output to PATH
export PATH="${PWD}/build/bin:${PATH}"

# Disable local development mode for Forge - use pre-built binaries from PATH instead
# The forge binaries must be built and available in PATH (added above from forge/build/bin)
export FORGE_RUN_LOCAL_ENABLED=false

# Source any local overrides
if [ -f .envrc.local ]; then
  source .envrc.local
fi
